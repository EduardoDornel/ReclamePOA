<Page
    x:Class="TelasReclame.Views.AddReclamacao"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TelasReclame.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <RelativePanel x:Name="TopBar"
                       Background="GreenYellow"
                       Height="52">
            <TextBlock x:Name="PageName"
                       FontSize="24"
                       Text="Adicionar Reclamação"                       
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       Padding="20,0,0,0"/>
        </RelativePanel>

        <!--Content-->
        <ScrollViewer Grid.Row="1">
            <RelativePanel ScrollViewer.VerticalScrollMode="Auto">
                <ComboBox x:Name="ListCategoria"
                          Header="Categoria"
                          Width="230" Margin="12,12,0,0"
                          ItemsSource="{Binding Categorias}"
                          />
                <AutoSuggestBox x:Name="ListBairro" Header="Bairro"
                          Width="230" Margin="12,12,0,0"
                          ItemsSource="{Binding Bairros}"
                          RelativePanel.Below="ListCategoria"                          
                          />
                <TextBox x:Name="TextBoxEndereco" Header="Endereco"
                         Margin="12,12,12,0" Width="320"
                         RelativePanel.Below="ListBairro" />
                <TextBox x:Name="TextBoxDescricao" Header="Descrição"
                         TextWrapping="Wrap"                         
                         Margin="12,12,12,0" Width="320"
                         RelativePanel.Below="TextBoxEndereco"
                         MaxLength="300"/>
                <TextBlock x:Name="LabelImageSelect" Text="Imagem" Margin="12"
                           RelativePanel.Below="TextBoxDescricao"/>
                <Button x:Name="ImagePickerButton" Height="32" Content="Adicionar Existente"
                        Margin="12,0" Click="ImagePickerButton_Click"
                        RelativePanel.Below="LabelImageSelect"/>
            </RelativePanel>
        </ScrollViewer>
        <CommandBar Grid.Row="2">
            <AppBarButton Icon="Cancel" Label="Cancelar" Click="CancelButton_Click"/>
            <AppBarButton Icon="Accept" Label="Confirmar" Click="SaveButton_Click"/>
        </CommandBar>
    </Grid>
</Page>
